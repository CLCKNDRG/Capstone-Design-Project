<?xml version="1.0" encoding="utf-8"?>
<!-- 카드뷰 디자인 -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp">

    <!-- 레이아웃 -->
    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/image_notification"
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_image"
            android:layout_marginTop="15dp">
        </ImageView>

        <!-- 프로필 이름 -->
        <TextView
            android:id="@+id/name_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="이름"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/image_notification">
        </TextView>

        <!-- 요청수락 버튼 -->
        <Button
            android:id="@+id/request_accept_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_notification"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="79dp"
            android:layout_marginRight="79dp"
            android:padding="5dp"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:text="요청 수락"
            android:textAllCaps="false"
            android:textSize="13dp">
        </Button>

        <!-- 요청거절 버튼 -->
        <Button
            android:id="@+id/request_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_accept_btn"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="79dp"
            android:layout_marginRight="79dp"
            android:layout_marginBottom="12dp"
            android:padding="5dp"
            android:background="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:text="요청 거절"
            android:textAllCaps="false"
            android:textSize="13dp">
        </Button>

    </RelativeLayout>

</androidx.cardview.widget.CardView>